<%= simple_form_for [:admin, @topic] do |f| %>
  <br />
  <br />
  <%= f.input :subject %>
  <br />
  <br />
  <%= f.label :locked %>
  <%= f.check_box :locked %>
  <%= f.label :pinned %>
  <%= f.check_box :pinned %>
  <%= f.label :hidden %>
  <%= f.check_box :hidden %>
  <br />
  <br />
  <%= f.label :forum_id %>
  <%= f.select "forum_id", options_from_collection_for_select(Forem::Forum.all, "id", "title", @topic.forum_id) %>
  <br />
  <br />
  <%= f.submit %>
<% end %>
