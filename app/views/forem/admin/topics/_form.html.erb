<%= simple_form_for [:admin, @topic] do |f| %>
  <%= f.input :subject %>
  <br />
  <br />
  <%= f.label :locked %>
  <%= f.check_box :locked %>
  <%= f.label :pinned %>
  <%= f.check_box :pinned %>
  <%= f.label :hidden %>
  <%= f.check_box :hidden %>
  <br />
  <br />
  <%= f.label :forum_id %>
  <%= f.select :forum_id, options_from_collection_for_select(@forums, 'id', 'title'), :include_blank => true %>
  <br />
  <br />
  <%= f.submit %>
<% end %>
